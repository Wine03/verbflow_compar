<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondorosado"
    tools:context=".ActividadesPrincipales.PRINCIPAL">

    <EditText
        android:id="@+id/Edit_USER"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/background"
        android:ems="10"
        android:hint="UserName"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:text="admin"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <EditText
        android:id="@+id/Edit_PASS"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/background"
        android:text="1234"
        android:ems="10"
        android:hint="Password"
        android:password="false"
        android:textAlignment="center"

        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_USER"
        app:layout_constraintVertical_bias="0.272" />

    <Button
        android:id="@+id/button2"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/green_buton"
        android:backgroundTint="#FFEB3B"
        android:text="@string/INICIO_SESION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_PASS" />

    <TextView

        android:id="@+id/texViewSuscribete"
        android:layout_width="284dp"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:text="@string/SUSCRIBETE"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/background"
        android:backgroundTint="#FFEB3B"
        android:gravity="center"
        android:text="@string/SUSCRIBIR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>